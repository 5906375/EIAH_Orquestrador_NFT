{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "hardhat"
    ]
  },
  "include": [
    "src",
    "scripts",
    "hardhat.config.ts",
    "test",
    "typechain-types",
    "contracts/**/*.json",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register",
      "dotenv/config"
    ]
  }
}